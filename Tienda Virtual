Proceso Tienda_Virtual
	Definir n, i Como Entero
	Definir producto Como Cadena
	Definir precio, total Como Real
	Definir lista Como Cadena
	
	lista <- ""
	total <- 0
	
	Escribir "¿Cuántos productos desea agregar al carrito?"
	Leer n
	
	Para i <- 1 Hasta n Con Paso 1 Hacer
		Escribir "Ingrese el nombre del producto ", i, ":"
		Leer producto
		Escribir "Ingrese el precio del producto ", i, ":"
		Leer precio
		
		total <- total + precio
		lista <- lista + producto + " - $" + ConvertirATexto(precio) + "\n"
	FinPara
	
	
	Escribir "LISTA DE PRODUCTOS COMPRADOS:"
	Escribir lista
	Escribir "Total de la compra: $", total
FinProceso
